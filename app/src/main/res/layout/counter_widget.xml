<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3F3"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Widget.AppWidgetContainer">

    <Button
        android:id="@+id/neg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="-"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/count"
        android:layout_width="162dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/pos"
        android:layout_toLeftOf="@+id/pos"
        android:layout_toEndOf="@+id/neg"
        android:layout_toRightOf="@+id/neg"
        android:gravity="center|center_horizontal|center_vertical" />

    <Button
        android:id="@+id/pos"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="+"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>